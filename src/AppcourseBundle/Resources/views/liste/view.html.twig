{% extends "AppcourseBundle::index.html.twig" %}

{% block title %}
Liste de course n°{{ liste.id }}
{% endblock %}

{% block body %}
<h1><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> {{ liste.nom }}</h1>

{% for message in app.session.flashbag.get('success') %}
	<div class="alert alert-success" role="alert"><strong><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> {{ message }} </strong></div>
{% endfor %}

 <p><em>Date de création : {{ liste.date|date('Y-m-d') }}</em></p>

<div class="alert alert-warning"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> {{ liste.commentaire }}</div>

{% for rayon in rayons %}
<p><span class="rayon"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> {{ rayon.nom }}</span><br />
	{% for produit in rayon.produits %}
		<span class="produit">- {{ produit.nom }}</span><br />
	{% endfor %}
</p>

{% endfor %}




{% endblock %}