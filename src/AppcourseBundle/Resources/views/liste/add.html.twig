{% extends "AppcourseBundle::index.html.twig" %}

{% block title %}
Créer une liste de courses
{% endblock %}

{% block body %}
<h1><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Créer une liste de course</h1>


 

{{ form_start(form) }}
    {{ form_errors(form) }}


	<p>{{ form_label(form.nom, 'Nom de la liste', {'attr': {'class': 'validate'}}) }}
	{{ form_widget(form.nom, {'attr': {'placeholder': 'Inscrire le nom de la liste'}}) }}</p>

	<p>{{ form_label(form.commentaire, 'Commentaire', {'attr': {'class': 'validate'}}) }}
	{{ form_widget(form.commentaire, {'attr': {'placeholder': 'Inscrire ici un commentaire'}}) }}</p>


	<p>
		{{ form_label(form.produits, 'Produits') }}<br />

		{% for produit in form.produits %}
		    {{ form_widget(produit, {'attr': {'class': 'filled-in'}}) }}
		    {{ form_label(produit) }}

		    <br />
		{% endfor %}
	</p>

	{{ form_widget(form.save) }}

{{ form_end(form) }}




{% endblock %}

