{% extends "AppcourseBundle::index.html.twig" %}

{% block title %}
Listing des courses
{% endblock %}

{% block body %}
<h1><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Mes listes de courses</h1>

<table class="table table-striped">
 
	<tr>
		<th>Date</th>
		<th>Nom</th>
		<th>Voir</th>
		<th>Editer</th>
		<th>Supprimer</th>
	</tr>

	{% for liste in listes %}
		<tr>
			<td>{{ liste.date|date('Y-m-d') }}</td>
			<td>{{ liste.nom }}</td>
			<td><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></button></td>
			<td><button type="button" class="btn grey lighten-1"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></td>
			<td><button type="button" class="btn red darken-4"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button></td>
		</tr>
	{% endfor %}



</table>

{% endblock %}