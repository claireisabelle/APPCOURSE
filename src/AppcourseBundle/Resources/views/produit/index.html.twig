{% extends "AppcourseBundle::index.html.twig" %}

{% block title %}
Listing des produits
{% endblock %}

{% block body %}
<h1><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Listes des produits</h1>

{% for message in app.session.flashbag.get('success') %}
	<div class="alert alert-success" role="alert"><strong><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> {{ message }} </strong></div>
{% endfor %}

<p><a class="label label-default" href="{{ path('appcourse_add_produit') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter un produit</a></p>

<div class="row">
	<div class="col-sm-8">
		<table class="table table-striped">
		 	<thead>
				<tr>
					<th>PRODUITS</th>
					<th>RAYON</th>
					<th></th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				{% for produit in listProduits %}
				<tr>
					<th>{{ produit.nom }}</th>
					

					<th>
						{{ produit.rayon.nom }}
					</th>
					<td><a title="Editer" class="label label-primary" href="{{ path('appcourse_edit_produit', {'id': produit.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
					<td><a title="Supprimer" class="label label-danger" href="{{ path('appcourse_delete_produit', {'id': produit.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>

{% endblock %}

