{% extends "AppcourseBundle::index.html.twig" %}

{% block title %}
Listing des rayons
{% endblock %}

{% block body %}
<h1><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Listes des rayons</h1>

{% for message in app.session.flashbag.get('success') %}
	<div class="alert alert-success" role="alert"><strong><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> {{ message }} </strong></div>
{% endfor %}

<p><a class="label label-default" href="{{ path('appcourse_add_rayon') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter un rayon</a></p>

<div class="row">
	<div class="col-sm-6">
		<table class="table table-striped">
		 	<thead>
				<tr>
					<th>RAYONS</th>
					<th></th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				{% for rayon in listRayons %}
				<tr>
					<th>{{ rayon.nom }}</th>
					<td><a title="Editer" class="label label-primary" href="{{ path('appcourse_edit_rayon', {'id': rayon.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
					<td><a title="Supprimer" class="label label-danger" href="{{ path('appcourse_delete_rayon', {'id': rayon.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>

{% endblock %}